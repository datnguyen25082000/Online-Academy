{{#section 'js'}}

{{/section}}
<!-- Sidebar -->
<div class="bg-light border-right position-fixed" id="sidebar-wrapper"
  style="overflow:scroll;top:75px; bottom:0px; padding-bottom: 75px">
  <div class="list-group list-group-flush">
    {{#if (isUndefined user.userType)}}
    <label class="list-group-item  bg-light m-0 text-primary font-weight-bold"> TRANG</label>
    <a href="/" class="list-group-item list-group-item-action bg-light"><i class="fa fa-home mr-3"
        aria-hidden="true"></i> Trang chủ</a>
    <a href="/courses/listCourse" class="list-group-item list-group-item-action bg-light"><i class="fas fa-books mr-3"></i>
      Khóa học</a>
    <label class="list-group-item  bg-light m-0 text-primary font-weight-bold"> LĨNH VỰC</label>
    <div>


      {{#each this.lcCategories}}
      <div class="select-box " style="">
        <div class="options-container">
          {{#each catLevel2}}
          <a class="option pl-2 d-block p-3" style="color: black;text-decoration: none;"
            href="/courses/listCourse/{{this.catID}}">
            <input type="radio" class="radio" id="automobiles" name="category" />
            <span for="automobiles" style="max-width: 180px; overflow: hidden;">{{this.catName}}</span>
            <span class="badge badge-danger float-right" style="padding: 5px">{{this.ProductCount}}</span>
          </a>
          {{/each}}
        </div>

        <a href="javascript:void(0)" class="selected list-group-item list-group-item-action bg-light border-0"
          style="border-bottom: 1px rgba(0,0,0,.125) solid !important">
          <span><span class=""></span>{{catName}}</span>
        </a>
      </div>
      {{/each}}


    </div>
    {{else}}
    {{#if (isAdmin user.userType)}}
    <a href="/" class="list-group-item list-group-item-action bg-light"><i class="fa fa-home mr-3"
        aria-hidden="true"></i> Trang chủ</a>
    <a href="/categories1/" class="list-group-item list-group-item-action bg-light"><i class="fa fa-list-ol mr-3"
        aria-hidden="true"></i> Quản lý lĩnh vực Lv1</a>
    <a href="/categories/" class="list-group-item list-group-item-action bg-light"><i class="fa fa-list-ol mr-3"
        aria-hidden="true"></i> Quản lý lĩnh vực Lv2</a>
    <a href="/courses" class="list-group-item list-group-item-action bg-light"><i class="fas fa-books mr-3"></i>
      Quản lý khóa học</a>
    <a href="/users" class="list-group-item list-group-item-action bg-light"> <i class="fas fa-user-cog mr-3"></i>
      Quản lý người dùng</a>
    <a href="/users" class="list-group-item list-group-item-action bg-light"> <i
        class="fas fa-chalkboard-teacher  mr-3  "></i> Giảng viên mới</a>
    {{else}}
    <label class="list-group-item  bg-light m-0 text-primary font-weight-bold"> TRANG</label>
    <a href="/" class="list-group-item list-group-item-action bg-light"><i class="fa fa-home mr-3"
        aria-hidden="true"></i> Trang chủ</a>
    <a href="/courses/listCourse" class="list-group-item list-group-item-action bg-light"><i class="fas fa-books mr-3"></i>
      Khóa học</a>
    <label class="list-group-item  bg-light m-0 text-primary font-weight-bold"> LĨNH VỰC</label>
    <div>


      {{#each this.lcCategories}}
      <div class="select-box " style="">
        <div class="options-container">
          {{#each catLevel2}}
          <a class="option pl-2 d-block p-3" style="color: black;text-decoration: none;"
            href="/courses/listCourse/{{this.catID}}">
            <input type="radio" class="radio" id="automobiles" name="category" />
            <span for="automobiles" style="max-width: 180px; overflow: hidden;">{{this.catName}}</span>
            <span class="badge badge-danger float-right" style="padding: 5px">{{this.ProductCount}}</span>
          </a>
          {{/each}}
        </div>

        <a href="javascript:void(0)" class="selected list-group-item list-group-item-action bg-light border-0"
          style="border-bottom: 1px rgba(0,0,0,.125) solid !important">
          <span><span class=""></span>{{catName}}</span>
        </a>
      </div>
      {{/each}}


    </div>
    {{/if}}
    {{/if}}
  </div>
</div>