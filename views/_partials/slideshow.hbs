<div class="mt-5 container pt-5">
    <h3 class="" style="">
        <span>
            {{this.name}}</span>
        <hr>
    </h3>

    <div class='d-flex row' style="position: relative">
        <div style="position: absolute; top: 50%; z-index: 10;left:-25px; transform: translate(0,-100%)">
            <a class=" align-self-center" href="#carouselExampleIndicators_{{this.index}}" role="button"
                data-slide="prev">
                <i class=" fa fa-backward fa-2x text-primary" aria-hidden="true"></i>
                <span class="sr-only">Previous</span>
            </a>
        </div>
        <div id="carouselExampleIndicators_{{this.index}}" class="carousel slide flex-grow-1" data-ride="carousel"
            data-interval="false">
            <div class="carousel-inner">
                <div class="carousel-item active" style="height: 350px">
                    <ul style="margin: 0px !important" id="autoWidth" class="cs-hidden slide-show row mx-5">
                        {{#each (subArray parameter 0)}}
                        <div class="col-md-3 mb-5">
                            <a class=" text-left p-0" style="color: black; text-decoration: none"
                                href="/courses/{{courseID}}">
                                <div class="card h-100 shadow d-flex m-auto" style="max-width: 250px">
                                    <img src="{{thumbImage courseImage}}" alt="{{courseName}}" title="{{courseName}}">
                                    <div class="p-2 d-flex flex-column flex-grow-1">
                                        <h5 class="font-weight-bold m-0">{{courseName}}</h5>
                                        <div class="mt-auto">
                                            <span class="text-success font-weight-bold d-block">{{catName}}</span>
                                            <span class=" courseLecturer">
                                                {{userDisplayName}}
                                            </span>

                                            <div class="mt-auto d-flex justify-content-between">
                                                <div>
                                                    <span style="position: relative; top: 2px; "
                                                        class="text-danger font-weight-bold">{{coursePointEval}}</span>
                                                    <div class="my-rating pb-2 d-inline"
                                                        data-rating="{{coursePointEval}}"></div>
                                                    <span class="text-secondary "
                                                        style="font-size: 15px; position: relative; top: 2px; ">{{#if
                                                        sum}}
                                                        ({{sum}}) {{else}} (0) {{/if}}</span>
                                                </div>
                                                <div style="position: relative; top: 15px">
                                                    {{#if (isUser ../user.userType)}}
                                                    {{#if isFavorite}}
                                                    <form action="/users/removeFavorite" class="formSubmit"
                                                        method="POST">
                                                        <input type="text" value="{{courseID}}" name="courseID"
                                                            class="d-none">
                                                        <button type="submit" class="btn btn-sm py-2 btn-success"
                                                            title="Xóa khỏi danh sách khóa học yêu thích">
                                                            <i class="fa fa-heart" aria-hidden="true"></i>
                                                        </button>
                                                    </form>
                                                    {{else}}
                                                    <form action="/users/addFavorite" method="POST" class="formSubmit">
                                                        <input type="text" value="{{courseID}}" name="courseID"
                                                            class="d-none">
                                                        <button type="submit"
                                                            class="btn btn-sm py-2 btn-outline-success"
                                                            title="Thêm vào danh sách khóa học yêu thích">
                                                            <i class="fa fa-heart" aria-hidden="true"></i>
                                                        </button>
                                                    </form>
                                                    {{/if}}
                                                    {{/if}}
                                                </div>
                                            </div>
                                            <div class="pb-2">
                                                <span class="card-text"><span class=" font-weight-bold">{{#if (isZero
                                                        coursePrice)}}Miễn
                                                        Phí {{else}}{{format coursePrice}}{{/if}}</span>
                                                </span>
                                            </div>
                                        </div>


                                    </div>
                                </div>
                            </a>
                        </div>
                        {{/each}}

                    </ul>
