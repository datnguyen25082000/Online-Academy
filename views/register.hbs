<div class="container">
        <div class="row">
            <div class="col-xs-1 col-md-3"></div>
            <div class="col-xs-10 col-md-6">
                <p class="text-center">
                    <a class="btn btn-primary btn-lg" href="/" role="button">
                        <img scr="saf.sss" alt="HOME">
                    </a>
                </p>
            </div>
            <div class="col-xs-1 col-md-3"></div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-1 col-md-3"></div>
            <div class="col-xs-10 col-md-6">
                <form action="/auth/register" method="post">
                    <div class="jumbotron">
                        <h1 class="display-4">REGISTER</h1>
                        <!--{{#if err}}-->
                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">{{this.errorMsg}}</h4>
                            <p></p>
                            <p class="mb-0"></p>
                        </div>
                        <!--{{else}}-->
                        <div class="alert " style="visibility:hidden" role="alert">
                            <h4 class="alert-heading">MESSAGE</h4>
                            <p></p>
                            <p class="mb-0"></p>
                        </div>
                        <!--{{/if}}-->
                        <div class="form-group">
                            <label for="name">Your full name</label>
                            <input type="text" class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" class="form-control" name="email" id="email" aria-describedby="helpId" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" name="username" id="username" aria-describedby="helpId" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" aria-describedby="helpId" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm password</label>
                            <input type="password" class="form-control" name="password2" id="password2" aria-describedby="helpId" placeholder="">
                        </div>

                        <div class="form-group">
                            <input type="submit" class="form-control" aria-describedby="helpId" placeholder="" submit>
                        </div>
                    </div>

                </form>
                <hr>
            </div>
            <div class="col-xs-1 col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-xs-1 col-md-3"></div>
            <div class="col-xs-10 col-md-6">

                <p class="text-center">Already have an account ?</p>

                <p class="text-center">
                    <a class="btn btn-primary btn-lg" href="/auth/login" role="button">LOGIN</a>
                </p>
            </div>
            <div class="col-xs-1 col-md-3"></div>
        </div>
    </div>

    <div class="modal-footer">
        <FOOTER class="text-center">Footer</FOOTER>
    </div>