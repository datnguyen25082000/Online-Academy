<!-- Optional: include a polyfill for ES6 Promises for IE11 -->
<script src="https://cdn.jsdelivr.net/npm/promise-polyfill"></script>
<script>
  $(document).ready(function () {
    if ($("#passwordTab").hasClass("active")) {
      Swal.fire({
        title: 'Hãy nhập mật khẩu của bạn',
        input: 'password',
        inputAttributes: {
          autocapitalize: 'off'
        },
        showCancelButton: true,
        cancelButtonText: 'Huỷ',
        confirmButtonText: 'Kiểm tra',
        showLoaderOnConfirm: true,
        preConfirm: (input) => {
          $.post("/auth/checkPass", { password: input },
            function (data, status) {
              if (data) {
                Swal.fire(
                  "Bạn đã nhập đúng mật khẩu",
                  'OK..',
                  'success'
                )
              }
              else {
                Swal.fire(
                  'Bạn đã nhập sai mật khẩu!!!',
                  'Oops...',
                  'error',
                ).then(function () {
                  window.location = "/users/profile"
                })
              }
            });
        },
        allowOutsideClick: () => !Swal.isLoading()
      }).then((result) => {
        Swal.fire(
          'Bạn đã không nhập mật khẩu!!!',
          'Oops...',
          'error'
        ).then(function () {
          window.location = "/users/profile"
        })
      })
    }
  })

  $('.err').hide();
  $('.validate').on("click", function () {
    $('.err').hide();
  })

  $("#submitEdit").click(function (e) {
    e.preventDefault();
    console.log("abc" + $('#name').val());
    if (!$('.validate').val()) {
      $('.err').show();
      return;
    }

    if ($('#password').length != 0)
      if ($('#password').val().length < 6) {
        $('.err').show();
        return;
      }

    Swal.fire({
      title: 'Bạn chắc chứ?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Sửa',
      cancelButtonText: 'Hủy'
    }).then((result) => {
      if (result.value) {
        var action = $(this).attr('formaction')
        var form = $("#formEdit");
        form.attr('action', action);
        form.submit();
        Swal.fire(
          'Đã lưu thông tin!',
          'OK',
          'success'
        ).then((r) => {
          if (r.value)
            $(location).attr('href', '/users/profile')
        })
      }
    })

  });
</script>


<script>
  tinymce.init({
    selector: '#describe',
    height: 200,
    plugins: 'paste image link autolink lists table media',
    menubar: false,
    toolbar: [
      'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
    ],
  });

  var src_avatar = '/public/imagesAvatar/' + $('#src_avatar').text() + '.png';
  $('#fuMain').fileinput({
    overwriteInitial: true,
    maxFileSize: 1500,
    showClose: false,
    showCaption: false,
    showBrowse: false,
    browseOnZoneClick: true,
    removeLabel: '',
    removeIcon: '<i class="fa fa-remove"></i>',
    removeTitle: 'Cancel or reset changes',
    elErrorContainer: '#kv-avatar-errors-2',
    msgErrorClass: 'alert alert-block alert-danger',
    defaultPreviewContent: `<img src="` + src_avatar + `" alt="YourAvatar "><div class="text-muted">Nhấn để chỉnh sửa</div>`,
    layoutTemplates: { main2: '{preview} ' + '{upload} {remove} {browse}' },
    allowedFileExtensions: ["jpg", "png", "gif"]
  });
</script>

{{/section}}
<div class="container overflow-hidden mt-5 mb-5">
  <div id="kv-avatar-errors-2" class="align-self-center" style="width:800px;display:none"></div>
  <div id="src_avatar" class="d-none">{{this.info.userUsername}}</div>
  <div class="card">
    <h5 class="card-header text-center">
      THÔNG TIN CÁ NHÂN
      <div></div>
    </h5>

    <div class="row vh-100 m-0">
      <div class="bg-light border-right col-md-4">
        <div class="text-center my-2 mt-4">
          <form action="" method="POST" enctype="multipart/form-data">
            <div class="card">
              <h5 class="card-header">Ảnh đại diện</h5>
              <div class="card-body">
                <div class="form-group">
                  <input id="fuMain" name="fuMain" type="file" class="file" multiple>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="list-group list-group-flush border rounded mt-4">
          <a href="/users/profile?tab=general"
            class="list-group-item list-group-item-action {{#if this.isGeneralTab}} active {{else}} bg-light {{/if}}">
            <i class="fa fa-gear mr-3" aria-hidden="true"></i>
            Cài đặt chung
          </a>
          <a id="passwordTab" href="/users/profile?tab=password"
            class="list-group-item list-group-item-action {{#if this.isGeneralTab}} bg-light {{else}} active {{/if}}">
            <i class="fa fa-key mr-3" aria-hidden="true"></i>
            Quản lý mật khẩu
          </a>
        </div>
      </div>

      <div class="card-body col-md-8 mt-2">
        <form action="/users/profile/save" method="POST" id="formEdit">
          {{#if this.isGeneralTab}}
          <div class="form-group">
            <label for="name">Họ tên</label>
            <input type="text" class="form-control validate" id="name" name="userDisplayName"
              value="{{this.info.userDisplayName}}" required>
            <div class="alert alert-warning err" id="errName" role="alert">Bạn cần phải nhập tên!
            </div>
          </div>

          <div class="form-group">
            <label for="name">Username</label>
            <input type="text" class="form-control" id="username" name="userUsername" value="{{this.info.userUsername}}"
              readonly>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="userEmail" aria-describedby="emailHelp"
              value="{{this.info.userEmail}}" disabled>
          </div>
          <div class="form-group">
            <label for="describe">Giới thiệu bản thân</label>
            <textarea class="form-control" name="userIntro" id="describe" cols="30" rows="10">
              {{this.info.userIntro}}
            </textarea>
          </div>
          {{else}}

          <div class="form-group">
            <label for="password">Mật khẩu</label>
            <input type="password" class="form-control validate" id="password" name="userPassword">
            <div class="alert alert-warning err" id="errPassword" role="alert">Mật khẩu cần dài hơn 6 kí tự !!!</div>
          </div>
          {{/if}}
          <div class="text-right">
            <a class="btn btn-outline-success mr-2" href="/" role="button">
              <i class="fa fa-backward mr-2" aria-hidden="true"></i>
              Quay về
            </a>
            <button type="button" class="btn btn-primary" id="submitEdit">
              <i class="fas fa-save mr-2"></i>
              Lưu
            </button>
          </div>
        </form>

      </div>
    </div>


  </div>
</div>