{{#section 'js'}}
<script>
  $("#submitDeleteUser").click(function () {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.value) {
        var action = $(this).attr('formaction')
        var form = $("#formEditUser");
        form.attr('action', action);
        form.submit();
        Swal.fire(
          'Deleted!',
          'This user has been deleted.',
          'success'
        ).then((result) => {
            if(result.value) 
              $(location).attr('href', '/users')
        })
      }
    })

  });
</script>
{{/section}}

<form method="POST" id="formEditUser">
  <div class="card  m-5 mt-5">
    <h5 class="card-header">
      User
    </h5>
    <div class="card-body">
      <div class="form-group">
        <label for="txtUserID">#</label>
        <input type="text" class="form-control" id="txtUserID" name="userUsername" value="{{this.editUser.userUsername}}" readonly>
      </div>
      <div class="form-group">
        <label for="txtUserName">Email</label>
        <input type="text" class="form-control" id="txtUserName" name="userEmail" value="{{this.editUser.userEmail}}"
          autofocus>
      </div>
    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-primary" href="/users" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
      <button type="button" id="submitDeleteUser" class="btn btn-outline-danger" formaction="/users/del">
        <i class="fa fa-trash" aria-hidden="true"></i>
        Delete
      </button>
      <button type="submit" class="btn btn-outline-success" formaction="/users/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
    </div>
  </div>
</form>